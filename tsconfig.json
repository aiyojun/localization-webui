{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2022"
    ],
//    "module": "umd",
//    "module": "ESNext",
    "declaration": false,
    "allowJs": true,
//    "moduleResolution": "bundler",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
//    "noEmit": true,
//    "emitDeclarationOnly": false,
//    "allowImportingTsExtensions": true,


    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
  ]
}
